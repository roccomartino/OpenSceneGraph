#ifndef OSGBREP_ORIENTEDEDGE
#define OSGBREP_ORIENTEDEDGE 


#include <osgBrep/Edge>


namespace osgBrep {


    class OSGBREP_EXPORT OrientedEdge : public osg::Object
    {
    public:

        META_Object(osgBrep, OrientedEdge);

        OrientedEdge();
        OrientedEdge(const OrientedEdge& other, const osg::CopyOp& copyop = osg::CopyOp::SHALLOW_COPY);


    protected:
        ~OrientedEdge();


    public:
        void setEdge(Edge* edge);

        Edge* getEdge();

        const Edge* getEdge() const;


        void setOrientation(bool orientation);

        bool getOrientation() const;

        const Vertex* getOrientedStart() const;
        const Vertex* getOrientedEnd() const;

        Vertex* getOrientedStart();
        Vertex* getOrientedEnd();


    private:
        osg::ref_ptr<Edge> _edge;
        
        bool _orientation;
    };

}

#endif
