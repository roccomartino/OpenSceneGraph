#ifndef OSGBREP_ORIENTEDEDGE
#define OSGBREP_ORIENTEDEDGE 


#include <osgBrep/Edge>


namespace osgBrep {


    class OSGBREP_EXPORT OrientedEdge : public osg::Object
    {
    public:

        META_Object(osgBrep, OrientedEdge);

        OrientedEdge();
        OrientedEdge(const OrientedEdge& other, const osg::CopyOp& copyop = osg::CopyOp::SHALLOW_COPY);


    protected:
        ~OrientedEdge();


    public:
        inline void setEdge(Edge* edge)
        {
            _edge = edge;
        }

        inline Edge* getEdge()
        {
            return _edge;
        }

        inline const Edge* getEdge() const
        {
            return _edge;
        }


        inline void setOrientation(bool orientation)
        {
            _orientation = orientation;
        }

        inline bool getOrientation() const
        {
            return _orientation;
        }


    private:
        osg::ref_ptr<Edge> _edge;
        
        bool _orientation;
    };

}

#endif
