#ifndef OSGBREP_VERTEX
#define OSGBREP_VERTEX 


#include <osg/Geode>
#include <osgBrep/Export>


namespace osgBrep {


    class OSGBREP_EXPORT Vertex : public osg::Object
    {
    public:

        META_Object(osgBrep, Vertex);

        Vertex();
        Vertex(const Vertex& other, const osg::CopyOp& copyop = osg::CopyOp::SHALLOW_COPY);


    protected:
        ~Vertex();


    public:
        inline void setPosition(const osg::Vec3& position) { _position = position; }
        inline const osg::Vec3& getPosition() const { return _position; }

        inline void setSelected(bool selected) { _selected = selected; }
        inline bool getSelected() const { return _selected; }


    private:
        osg::Vec3 _position;

        bool _selected{ false };
    };

}

#endif
